# SpectrWM configuration

# Workspaces
workspace_limit		= 10
focus_mode 		= default

# Window decorations.
tile_gap 		= 10
region_padding 		= 10
border_width 		= 3
color_focus     	= rgb:57/6b/57
color_unfocus   	= rgb:57/6b/57

# Configure the bar appearance.
bar_enabled		= 1
bar_border 		= rgb:0d/0e/0d
bar_border_width 	= 10
bar_color		= rgb:0d/0e/0d
bar_font 		= Ubuntu Nerd Font:pixelsize=16:antialias=true,Liga SFMono Nerd Font:pixelsize=16:style=bold:antialias=true,Liga SFMono Nerd Font:pixelsize=16:antialias=true
bar_font_color 		= rgb:6b/6c/70,rgb:57/6b/57,rgb:57/6b/57
bar_at_bottom		= 0
maximize_hide_bar	= 0
bar_format 		= +A
bar_justify 		= left
bar_action_expand 	= 1
bar_action 		= /home/annpenrose/.config/spectrwm/baraction.sh
# +4< Pad with 4 spaces
# +A Output of the external script
# +C Window class (from WM_CLASS)
# +D Workspace name
# +F Floating indicator
# +I Workspace index
# +M Number of iconic (minimized) windows in workspace
# +N Screen number
# +P Window class and instance separated by a colon
# +S Stacking algorithm
# +T Window instance (from WM_CLASS)
# +U Urgency hint
# +V Program version
# +W Window name (from _NET_WM_NAME/WM_NAME)
# ++ A literal ‘+’

# Autostart
autorun 		= ws[1]:~/.config/spectrwm/autostart.sh

# Set focus behavior.
workspace_clamp		= 1
warp_focus		= 0
warp_pointer		= 0
cycle_visible		= 0
focus_close_wrap	= 1
focus_mode		= default

# Workspaces
#workspace_indicator	= listcurrent,listactive,markcurrent,printnames
#name			= ws[1]:Term
#name			= ws[2]:Web
#name			= ws[3]:Music

# Programs
program[term] 		= sakura
program[browser] 	= brave-browser
program[menu] 		= dmenu_run
program[volume_up] 	= wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
program[volume_down] 	= wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
program[vol_mute] 	= wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
#program[screenshot] 	= scrot -d 3 -c --quality 100
#program[lock] 		= i3lock-fancy

# Set US keyboard bindings
modkey 			= Mod4

# Keybinds
bind[volume_up] 	= F12
bind[volume_down] 	= F11
bind[vol_mute] 		= F10
bind[lock]		= MOD+Shift+Delete
bind[browser]		= MOD+b
bind[bar_toggle]	= MOD+Control+b
bind[bar_toggle_ws]	= MOD+Shift+b
bind[button2]		= MOD+v
